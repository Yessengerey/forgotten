<% include head.ejs%>

<body style="background-image: url('https://i.imgur.com/NN4WmaK.jpg'); background-repeat: no-repeat; background-size: 100%">

    <div class="col-sm-8 col-sm-offset-2" style="background-color: black; opacity: 0.8;">

      <h3 style="font-family: Sue !important; color: white; font-size: 500% !important;  text-align: center; margin-top: 50px;">FORGOTTEN</h3>

      <h4 style="text-align: center; font-family: Exo Light !important; color: white; font-size: 175% !important;">Sign Up</h4>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label style="font-family: Exo Light !important; color: white; font-size: 200% !important;">Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label style="font-family: Exo Light !important; color: white; font-size: 200% !important;">Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button class="btn btn-primary center-block" type="submit" class="btn btn-warning btn-lg" style="font-family: Exo Light; color: white; text-align: center; background-color: #E94F37; border: none; height: 40px; width: 100px; font-size: 125%;">Sign Up </button>
        </form>

        <hr>
        <div style="text-align: center; font-family: Exo Light !important; color: white; font-size: 150% !important;">
            Or signup with any of the following services:<br />
            <a style="margin-right:15px" href="/auth/facebook"><img src="/assets/fb-logo.png" /></a>
            <a style="margin-left:15px;margin-right:15px" href="/auth/google"><img style="width:29px" src="/assets/google-logo.png" /></a>

        </div>
        <hr>

        <p style="text-align: center; font-family: Exo Light !important; color: white; font-size: 150% !important;" >Already have an account? <a style="color: #E94F37" href="/login">Log In</a></p>
    </div>

<% include foot.ejs%>
